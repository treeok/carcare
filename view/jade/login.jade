doctype html
html
   head
      title 登录页面
      meta(http-equiv="Content-Type", content="text/html; charset=utf-8")
      meta(name="viewport", content="width=device-width, initial-scale=1")
      meta(http-equiv="X-UA-Compatible", content="IE=edge")
      include include/loads.jade
   body
      header#top.navbar.navbar-static-top.bs-docs-nav(role="banner",style="height:200px;")
         .container
            .navbar-header
               button.navbar-toggle.collapsed(type="button", data-toggle="collapse", data-target=".bs-navbar-collapse")
                  span.sr-only Toggle navigation
                  span.icon-bar
                  span.icon-bar
                  span.icon-bar
               a.navbar-brand(href="index.html") 车挣
                  // img(src="img/logo.png" height="50")
      #login-content(style="background-color:#efefef;")
         .container
            .row
               .col-md-8
                  img(src='img/login_bg.png')
               .col-md-4
                  form(id="loginPage" style="background-color:#777777;margin:30px auto 0;width:290px;height:330px;")
                     .login-heading.text-left(style="margin:5px 30px;height:70px;line-height:70px;color:#fff;font-size:20px;font-weight:bold;") 登录车挣
                     div(style="margin:5px 30px 15px;")
                        input(id="login_login_user" style="width:230px;height:41px;border: 0;background:url('img/user.png') no-repeat;text-indent:42px;background-color:#fff;")
                        small.tips-container.text-danger(style="display: none;") *用户名不正确
                        small.tips-container.text-danger(style="display: none;") *用户名不能为空
                     div(style="margin:5px 30px 0;")
                        input(id="login_login_psd" type="password" style="width:230px;height:41px;border: 0;background:url('img/psd.png') no-repeat;text-indent:42px;background-color:#fff;")
                        small.tips-container.text-danger(style="display: none;") *密码不正确
                        small.tips-container.text-danger(style="display: none;") *密码不能为空
                     button(id="login_forgetPsd_btn" type="button" class="btn btn-link pull-right" style="color:#fff;margin-right:30px;") 忘记登录密码？
                     div(style="margin:5px 30px;")
                        button(id="login_login_btn" type="button" class="btn btn-primary btn-lg btn-block") 登录
                     button(id="login_register_btn" type="button" class="btn btn-link pull-right" style="color:#fff;margin-right:30px;") 马上注册

      footer(style="margin-top:10px;background-color:#fff;")
         .container
            .row.text-center
               span(style="margin:15px 15px;") 关于车挣
               span(style="margin:15px 15px;")
                  a(href="install.html") 常见问题
               span(style="margin:15px 15px;") 客服热线：400-034-5858
            .row.text-center
               small CopyRight &copy; 2013-2015 CHEZHENG Corporation  ,All Right Reserved
      script(src="./script/common.js")
